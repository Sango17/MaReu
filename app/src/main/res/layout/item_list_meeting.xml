<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/ic_round_pink_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_main_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Reunion A -  14h00 - Peach"/>

        <TextView
            android:id="@+id/item_contact_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="maxime@lamzone.com, luc@lamzone.com, alex@lamzone.com"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/item_trash"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        tools:srcCompat="@drawable/ic_delete_gray_24dp"/>
    
</LinearLayout>